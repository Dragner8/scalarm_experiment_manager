<section>
  <%= content_tag :h3, "Registered Simulation Output Readers" %>

  <ul>
    <% @output_readers.each do |output_reader| %>
        <%= content_tag :li do %>
            <%= form_tag simulations_destroy_component_path do %>
                <%= hidden_field_tag "component_type", "output_reader" %>
                <%= hidden_field_tag "component_id", output_reader._id %>
                <%= output_reader.name %>
                <%= submit_tag "Destroy" %>
            <% end %>
        <% end %>
    <% end %>
  </ul>
</section>
<%= javascript_tag "$(function() { $('input[type=submit]').button({}); });" %>