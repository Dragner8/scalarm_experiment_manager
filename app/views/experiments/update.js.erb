$("#share-dialog").foundation('reveal', 'close');

<% if @msg.include?(:error) %>
	toastr.error("<%= @msg[:error] %>")
<% end %>

<% if @msg.include?(:notice) %>
	toastr.success("<%= @msg[:notice] %>")
	// update experiment name and description everywhere
	$(".experiment-name").html("<%= @experiment.name %>")
	$(".experiment-description").html("<%= @experiment.description %>")
  $("#avg_execution_time").hide();
  $("#p_predicted_finish_time").hide();
<% end %>
