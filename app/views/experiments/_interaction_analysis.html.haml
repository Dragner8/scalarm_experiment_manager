%section.panel.radius.analysis-chart#interaction_charts_form
  %h3= t("#{@experiment}")
  %h3.subheader= t('charts.scatter.section_header')

  = form_tag '', class: '' do
    .row
      .small-5.columns
        = label_tag :x_axis, t('charts.scatter.select_x') + ':', class: 'inline'
      .small-7.columns
        = select_tag 'x_axis', '', { class: 'params_list' }
    .row
      .small-5.columns
        = label_tag :y_axis, t('charts.scatter.select_y') + ':', class: 'inline'
      .small-7.columns
        = select_tag 'y_axis', '', { class: 'params_list' }
    .row
      %ul.inline-list
        %li= submit_tag t('charts.load_button'), class: 'button radius'
        %li= image_tag 'loading.gif', :id => 'busy_interaction', size: '16x16', style: 'display: none'

#interaction_charts

- content_for :javascript do
  :javascript
    var interaction_chart_counter = 0;
    console.log("interaction_charts!");
	

    // 'Load chart' button handler
    $('#interaction_charts_form input[type=submit]').bind('click', function() {
      $('#busy_interaction').show();

      var x_axis = $('#interaction_charts_form select[name=\'x_axis\'] option:selected').val().split("___").slice(-1)[0];
      var y_axis = $('#interaction_charts_form select[name=\'y_axis\'] option:selected').val().split("___").slice(-1)[0];

      $("#interaction_charts").prepend("<div id='interaction_chart_" + interaction_chart_counter + "'></div>");
      $("#interaction_chart_"+interaction_chart_counter).html("#{escape_javascript(render partial: 'interaction_chart')}")

      
      $("#interaction_chart_"+interaction_chart_counter+" .interaction_chart_container").load("http://172.16.67.121:8080/interaction_chart?id=#{@experiment.id}&param1="+x_axis+"&param2="+y_axis+"&chart_id="+interaction_chart_counter, function() {$('#busy_interaction').hide();});
      //.load("/charts/interaction_chart...

      interaction_chart_counter++;
      return false;
    });
