#scheduling_policy_dialog{:title=>"Scheduling policy of the experiment"}
  = form_tag(url_for({:action => :change_scheduling_policy}), :onSubmit => "$('#loading-img').show(); $('#scheduling_policy_dialog').dialog('close')", :remote => true) do
    = hidden_field_tag :experiment_id, @experiment.id
    %div
      Current scheduling policy of the experiment: 
      %b#policy_name= @experiment.scheduling_policy + "."
    %br
    %div Select new scheduling policy: #{select_scheduling_policy}
    %br
    .buttons
      = submit_tag "Submit"
      
= javascript_tag "prepare_policy_dialog()"