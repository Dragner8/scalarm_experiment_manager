-tabs=[:plgrid, :cloud, :private_machine]

%h2= t('experiments.monitoring_actions.booster.header')

%a.close-reveal-modal &#215;

- first = true
%dl.tabs(data-tab="")
  - tabs.each do |tab_id|
    %dd{class: "#{first ? 'active' : '' }"}
      %a{ href: "##{tab_id.to_s}" }= t(".#{tab_id}")
    - first = false if first

- first = true
.tabs-content
  - tabs.each do |tab_id|
    .content{ id: tab_id, class: "#{first ? 'active' : '' }", style: 'width: 100%' }
      = render partial: "infrastructure/information/#{tab_id}", locals: { experiment: @experiment, user: @current_user }
    - first = false if first


:javascript
  $(function() {
    $(document).foundation();

    new window.InformationDialog('#extension-dialog');
  });