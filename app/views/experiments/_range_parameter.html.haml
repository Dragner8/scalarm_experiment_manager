- html_hash = { :class => "nice_input" }
- html_hash[:disabled] = true if (defined? editable_inputs) and (editable_inputs == false)

%div
  %label.nice_label Set min:
  = text_field_tag "#{parameter_id}_min", node.min, html_hash
  = javascript_tag "add_live_validation('#{parameter_id}_min', #{parameter.min}, #{parameter.max})"
%div
  %label.nice_label Set max:
  = text_field_tag "#{parameter_id}_max", node.max, html_hash
  = javascript_tag "add_live_validation('#{parameter_id}_max', #{parameter.min}, #{parameter.max})"
%div
  %label.nice_label Set step:
  = text_field_tag "#{parameter_id}_step", [node.step, 0.5].max, html_hash
  = javascript_tag "add_live_validation('#{parameter_id}_step', 0.1, #{parameter.max})"


