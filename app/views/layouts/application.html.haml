%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = csrf_meta_tags
    %title Scalarm
    = stylesheet_link_tag 'application'

  %body
    = render 'layouts/navbar'

    #wrapper
      = yield

    %footer
      .row
        .small-8.columns
          = raw t('copyright')
        .small-2.columns
          = link_to image_tag('cyfronet_logo.png', size: "92x64"), 'http://www.cyfronet.pl'
        .small-2.columns
          = link_to image_tag('eda_logo.png', size: "64x64"), 'http://www.eda.europa.eu'


    = javascript_include_tag 'application'
    :javascript
      $(function() {
        if(#{not flash[:notice].nil?}) {
          toastr['success']("#{flash[:notice]}");
        }
        if(#{not flash[:error].nil?}) {
          toastr['error']("#{flash[:error]}");
        }
      });
    = yield :javascript
