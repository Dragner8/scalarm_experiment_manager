<!DOCTYPE html>
<html>
<head>
  <title>Scalarm</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "cupertino/jquery-ui-1.8.16.custom" %>
  <%= javascript_include_tag 'jquery-1.4.4.min', 'rails', 'application', 'jquery-ui-1.8.16.custom.min' %>
  <%= csrf_meta_tag %>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'/>
</head>

<body>
<div id="wrapper">
  <nav>
    <% if session[:user] %>
        <%= form_tag :controller => "user_controller", :action => "logout" do %>
            <%= submit_tag "Logout", :class => "nice_button account_button" %>
        <% end %>
        <%= form_tag :controller => "user_controller", :action => "account" do %>
            <%= submit_tag "Account", :class => "nice_button account_button" %>
        <% end %>
    <% end %>

    <div class="menu" style="height: 38px">
    </div>
  </nav>

  <header>
    <h1 id="site_title">Scalarm Experiment Manager</h1>

    <a href="http://www.cyfronet.pl">
      <%= image_tag "cyfronet_logo.png", :size => "170x80", :style => "float: right;" %>
    </a>
    <a href="http://www.eda.europa.eu">
      <%= image_tag "eda_logo.png", :height => "80" %>
    </a>
  </header>

  <div class="clearall"></div>

  <div class="notice" style="display: none;">
    <%= flash[:notice] if flash[:notice] %>
  </div>
  <%= javascript_tag("$('.notice').show();") if flash[:notice]  %>

  <div class="error" style="display: none;">
    <%= flash[:error] if flash[:error] %>
  </div>
  <%= javascript_tag("$('.error').show();") if flash[:error]  %>

  <%= yield %>
</div>
</body>
</html>
