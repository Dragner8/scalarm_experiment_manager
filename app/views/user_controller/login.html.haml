- content_for :title, 'Scalarm - login'

= javascript_include_tag 'jquery'

%section#main
  .row
    .large-6.columns
      .panel.radius
        = form_tag login_path do
          .row
            .large-5.columns
              %label.right.inline Login:
            .large-7.columns
              = text_field_tag 'username', '', class: 'inline'

          .row
            .large-5.columns
              %label.right.inline Password:
            .large-7.columns
              = password_field_tag 'password', '', class: 'inline'

          .row
            .large-4.large-centered.columns
              = submit_tag 'Submit', class: 'button'

    .large-6.columns
      .panel.radius
        .row
          .large-12.large-centered.columns(style="text-align:center;")
            %span.button#google_openid
              = t('openid.login', provider: 'Google')
        -#.row
        -#  .large-12.large-centered.columns(style="text-align:center;")
        -#    %span.button
        -#      (TODO) Login with PLGrid OpenId

        :javascript
          $(function() {
            $('span#google_openid').click(function() {
              window.location = " #{login_openid_google_url} ";
            });
          });