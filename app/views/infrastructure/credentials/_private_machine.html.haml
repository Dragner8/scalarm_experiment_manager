.row
  = form_tag add_infrastructure_credentials_infrastructure_path, remote: true, class: 'custom' do
    = hidden_field_tag :infrastructure_name, 'private_machine'
    .row
      .small-4.columns
        = label_tag :host, t('infrastructure.credentials.private_machines_manager.host') + ':', class: 'inline right'
      .small-2.columns
        = text_field_tag :host, ''
      .small-1.columns
        = label_tag :port, t('infrastructure.credentials.private_machines_manager.port') + ':', class: 'inline right'
      .small-1.columns
        = text_field_tag :port, '22'
      .small-2.columns
    .row
      .small-4.columns
        = label_tag :login, t('infrastructure.credentials.private_machines_manager.login') + ':', class: 'inline right'
      .small-4.columns
        = text_field_tag :login, ''
      .small-4.columns
    .row
      .small-4.columns
        = label_tag :secret_password, t('infrastructure.credentials.private_machines_manager.password') + ':', class: 'inline right'
      .small-4.columns
        = password_field_tag :secret_password, ''
      .small-4.columns
    .row
      .small-12.columns.text-center
        = submit_tag t('infrastructure.information.submit'), class: 'button radius'

= content_for :javascript do
  :javascript
    $(function() {
      new window.TableCredentialsManager('private_machine');
    });
